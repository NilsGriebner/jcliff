name=security
getContents=/subsystem=security:read-resource(recursive=true)
client.preprocess.strip=/security
server.preprocess.strip=/security-domain

match.addSecurityDomain=add:/*
addSecurityDomain.precedence=50
addSecurityDomain.rule.1=/subsystem=security/security-domain=${name(.)}:add
addSecurityDomain.refresh=true

match.removeSecurityDomain=remove:/*
removeSecurityDomain.precedence=50
removeSecurityDomain.rule.1=/subsystem=security/security-domain=${name(.)}:remove
removeSecurityDomain.refresh=true

match.addLoginModule=add:/*/authentication/*/*
addLoginModule.precedence=55
addLoginModule.rule.1=/subsystem=security/security-domain=${name(../../..)}/authentication=classic:add(login-modules=${value(.)})

match.modifyLoginModule=modify:/*/authentication/*/*
modifyLoginModule.precedence=55
modifyLoginModule.rule.1=/subsystem=security/security-domain=${name(../../..)}/authentication=classic:remove
modifyLoginModule.rule.2=/subsystem=security/security-domain=${name(../../..)}/authentication=classic:add(login-modules=${value(.)})
modifyLoginModule.refresh=true

# Rules that don't do anything. They are here only to prevent "No rules for diffs" errors.
match.addLoginModuleNoAction1=add:/*/authentication/classic
match.addLoginModuleNoAction2=add:/*/authentication/classic/login-modules/*
match.modifyLoginModuleNoAction1=modify:/*
match.modifyLoginModuleNoAction2=modify:/*/authentication


